{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "meta":{
        "title": "Blueprint: Gutenberg Nightly",
        "description":"Blueprint to test Gutenberg Nightly in a Playground instance. GB Nightly is built almost daily via the Gutenberg Times.",
        "author": "Birgit Pauli-Haack",
        "categories": ["Gutenberg", "Plugins"]

    },
    
    "landingPage": "/wp-admin/plugins.php",
        "steps":[
                {
                    "step": "login",
                    "username": "admin",
                    "password": "password"
                },
                {
                    "step":"installPlugin",
                        "pluginZipFile":{
                            "resource":"url",
                            "url":"https://gutenbergtimes.com/wp-content/uploads/2020/11/gutenberg.zip"
                        },
                        "options": {
                            "activate": true
                        }
                }
        ]
}
